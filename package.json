{
  "name": "modern-calculator",
  "version": "2.0.0",
  "description": "A modern, feature-rich scientific calculator with history, themes, and accessibility features",
  "main": "js/main.js",
  "type": "module",
  "scripts": {
    "start": "npx http-server . -p 3000 -o",
    "dev": "npx live-server --port=3000 --open=/",
    "test": "npx jest --run",
    "test:watch": "npx jest --watch",
    "lint": "npx eslint js/**/*.js",
    "lint:fix": "npx eslint js/**/*.js --fix",
    "prebuild": "npm run clean",
    "build": "npm run build:js && npm run build:assets",
    "build:js": "npx rollup -c",
    "build:assets": "npm run copy:html && npm run copy:css && npm run copy:assets",
    "copy:html": "copy index.html dist\\ && powershell -Command \"(Get-Content dist\\index.html) -replace 'type=\\\"module\\\" src=\\\"js/main.js\\\"', 'src=\\\"bundle.js\\\"' | Set-Content dist\\index.html\"",
    "copy:css": "xcopy styles dist\\styles\\ /E /I /Y",
    "copy:assets": "copy calculator.ico dist\\ && copy LICENSE dist\\ && copy Readme.md dist\\",
    "clean": "if exist dist rmdir /s /q dist && mkdir dist",
    "serve": "npx http-server dist -p 8080"
  },
  "keywords": [
    "calculator",
    "scientific",
    "math",
    "javascript",
    "modern",
    "accessible",
    "responsive"
  ],
  "author": "Harshraj G",
  "license": "MIT",
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.4",
    "babel-jest": "^30.2.0",
    "eslint": "^8.50.0",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "live-server": "^1.2.2",
    "rollup": "^4.0.0"
  },
  "dependencies": {},
  "jest": {
    "testEnvironment": "jsdom",
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/js/$1"
    },
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "js/**/*.js",
      "!js/main.js"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/HRG-OFFICIAL/Calculator.git"
  },
  "bugs": {
    "url": "https://github.com/HRG-OFFICIAL/Calculator/issues"
  },
  "homepage": "https://github.com/HRG-OFFICIAL/Calculator#readme"
}
